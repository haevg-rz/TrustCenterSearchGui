<Window x:Class="TrustCenterSearch.Presentation.MainWindow"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter="clr-namespace:TrustCenterSearch.Presentation.Converter"
        mc:Ignorable="d"
        DataContext="{StaticResource ViewModel}"
        Title="Trust Center Search GUI" Height="550" Width="1100">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <converter:HighlightConverter x:Key="HighlightConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox Name ="SearchBar"  Grid.Column="1" Grid.Row="0"  Margin="10"  Padding="3" Width="auto" Height="auto">
            <TextBox.Text>
                <Binding Path="SearchBarInput" Delay="500" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"></Binding>
            </TextBox.Text>
        </TextBox>
        <TextBlock Grid.Column="1" Grid.Row="0" Margin="15,10,10,10" Padding="3" FontStyle="Italic" Foreground="Gray" Text="" IsHitTestVisible="False" />

        <!-- Search results -->
        <Border Grid.Column="1" Grid.Row="1" Margin="10"  Background="White" BorderBrush="Black" BorderThickness="1">
            <ItemsControl ItemsSource="{Binding Path=CertificatesCollectionView}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="145" Width="830" HorizontalAlignment="Left">
                            <Border Margin="5,5,5,5" BorderBrush="Black" BorderThickness="1" CornerRadius="8,8,8,8">
                                <WrapPanel Margin="0,0,0,0">
                                    <StackPanel>
                                        <WrapPanel>
                                            <Label Width ="100" Content="Subject:" Foreground="Gray" FontSize="16"></Label>
                                            <TextBox Style="{StaticResource SearchResultTextBox}" Text="{Binding Subject}" Width="700" Foreground="{Binding Subject, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"></TextBox>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label Width ="100" Content="Issuer:" Foreground="Gray" FontSize="16"></Label>
                                            <TextBox Style="{StaticResource SearchResultTextBox}" Text="{Binding Issuer}" Foreground="{Binding Issuer, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"></TextBox>
                                        </WrapPanel>
                                        <WrapPanel Margin="0,0,0,0">
                                            <Label Width ="100" Content="Not After:" Foreground="Gray" FontSize="16"></Label>
                                            <TextBox Style="{StaticResource SearchResultTextBox}" Text="{Binding NotAfter}" Foreground="{Binding NotAfter, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"></TextBox>
                                            <Label Content="Not Before:" Foreground="Gray" FontSize="16"></Label>
                                            <TextBox Style="{StaticResource SearchResultTextBox}" Text="{Binding NotBefore}" Foreground="{Binding NotBefore, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"></TextBox>
                                            <Label Content="Serialnumber:" Foreground="Gray" FontSize="16" Margin="20,0,0,0"></Label>
                                            <TextBox Style="{StaticResource SearchResultTextBox}" Text="{Binding SerialNumber}" Foreground="{Binding SerialNumber, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"></TextBox>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label Width ="100" Content="Thumbprint:" Foreground="Gray" FontSize="16"></Label>
                                            <TextBox Style="{StaticResource SearchResultTextBox}" Text="{Binding Thumbprint}" Foreground="{Binding Thumbprint, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"></TextBox>
                                        </WrapPanel>
                                    </StackPanel>
                                </WrapPanel>
                            </Border>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling"></VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <ScrollViewer CanContentScroll="True" 
                              Focusable="False">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>

            </ItemsControl>
        </Border>
        <!-- Search results -->

        <!-- Menu -->
        <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0,10,10,10" Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="160"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="400"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- AddTrustCenter -->
            <Grid Grid.Column="0" Grid.Row="0">
                <StackPanel>
                    <Label Content="Add Trust Center" FontSize="20" Margin ="10,0,0,0"></Label>
                    <WrapPanel Margin="5">
                        <Label Width="45" Content="Name" Margin ="10,0,0,0"></Label>
                        <TextBox Padding="3" Width="200" Height="auto" TextChanged="TextBox_TextChanged" Text="{Binding AddTrustCenterName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <Label Width="45" Content="URL" Margin ="10,0,0,0"></Label>
                        <TextBox Padding="3" Width="200" Height="auto" Text="{Binding AddTrustCenterUrl, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </WrapPanel>
                    <Button Style="{StaticResource AddButtonStyle}" Command="{Binding AddTrustCenterButtonCommand}"></Button>
                </StackPanel>
            </Grid>
            <!-- AddTrustCenter -->

            <!-- TrustCenterHistory -->
            <Grid Grid.Column="0" Grid.Row="1">
                <Label Content="Trust Center History" FontSize="20" Margin ="10,0,0,0"></Label>
            </Grid>

            <!-- TrustCenter Active Filter -->
            <Grid Grid.Column="0" Grid.Row="2">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!-- TrustCenter Active Filter -->
                        <Grid Grid.Row ="0">
                            <StackPanel Margin ="4,4,4,0">
                                <ItemsControl ItemsSource="{Binding Path=TrustCenterHistoryActive}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel>
                                            </StackPanel>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="2" Height="32" Margin="2" BorderBrush="DimGray" BorderThickness="0.8" CornerRadius="8" Background="DarkGray">
                                                <WrapPanel Margin="2" Background="Transparent">
                                                    <Button Margin="0,2,8,2" CommandParameter="{Binding}" Command="{Binding Source={StaticResource ViewModel}, Path=RemoveTrustCenterFromFilterCommand}" Height="20" Width="20" BorderThickness="0" Background="Transparent">
                                                        <Image Height="10" Width="10" Source ="/Resources/Images/add.png"></Image>
                                                    </Button>
                                                    <TextBlock Width="200" VerticalAlignment="Center" Text="{Binding}"></TextBlock>
                                                    <Button CommandParameter="{Binding}" Command="{Binding Source={StaticResource ViewModel}, Path=DeleteTrustCenterFromHistoryCommand}" Background ="Transparent" Height="20" Width="20" BorderThickness="0">
                                                        <Image Source ="/Resources/Images/binBlack.png"></Image>
                                                    </Button>
                                                </WrapPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                        <!-- TrustCenter Active Filter -->

                        <!-- TrustCenter Inactive Filter -->
                        <Grid Grid.Row ="1">
                            <StackPanel Margin="4,0,4,4">
                                <ItemsControl ItemsSource="{Binding Path=TrustCenterHistoryInactive}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel>
                                            </StackPanel>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="2" Height="32" Margin="2" BorderBrush="DimGray" BorderThickness="0.8" CornerRadius="8" Background="#bfbfbf">
                                                <WrapPanel Margin="2" Background="Transparent">
                                                    <Button Margin="0,2,8,2" CommandParameter="{Binding}" Command="{Binding Source={StaticResource ViewModel}, Path=AddTrustCenterToFilterCommand}" Height="20" Width="20" BorderThickness="0" Background="Transparent">
                                                        <Image Height="10" Width="10" Source ="/Resources/Images/add.png"></Image>
                                                    </Button>
                                                    <TextBlock Width="210" VerticalAlignment="Center" Text="{Binding}"></TextBlock>
                                                    <Button CommandParameter="{Binding}" Command="{Binding Source={StaticResource ViewModel}, Path=DeleteTrustCenterFromHistoryCommand}" Background ="Transparent" Height="20" Width="20" BorderThickness="0">
                                                        <Image Source ="/Resources/Images/binBlack.png"></Image>
                                                    </Button>
                                                </WrapPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
            <!-- TrustCenter Inactive Filter -->
            
            <!-- TrustCenterHistory -->

        </Grid>
        <!-- Menu -->

    </Grid>
</Window>
