<Window x:Class="TrustCenterSearch.Presentation.MainWindow"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter="clr-namespace:TrustCenterSearch.Presentation.Converter"
        xmlns:models="clr-namespace:TrustCenterSearch.Core.Models;assembly=TrustCenterSearch.Core"
        mc:Ignorable="d"
        DataContext="{StaticResource ViewModel}"
        Title="Trust Center Search GUI" Height="550" Width="1100">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/IconStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextBlockStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/LoadingAnimationStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/LabelStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/BorderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:HighlightConverter x:Key="HighlightConverter" />
            <converter:VisibilityConverter x:Key="VisibilityConverter" />

            <Style x:Key="CollapseSideBarButtonStyleTrigger" TargetType="Button">
                <Setter Property="Width" Value="10" />
                <Setter Property="Background" Value="#2772db" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding MenuWidth}" Value="0">
                        <Setter Property="Background" Value="#d9e9ff" />
                        <Setter Property="Width" Value="15" />
                        <Setter Property="Height" Value="140" />
                        <Setter Property="Content" Value=">" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="{Binding MenuWidth, UpdateSourceTrigger=PropertyChanged}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2" Grid.Row="0" Margin="10,10,27,0">
            <TextBox Name="SearchBar" IsEnabled="{Binding UserInputIsEnabled}" Height="30" FontSize="15"
                     Padding="0,4,0,0">
                <TextBox.Text>
                    <Binding Path="SearchBarInput" Delay="500" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" />
                </TextBox.Text>
            </TextBox>
        </StackPanel>

        <TextBlock Grid.Column="1" Grid.Row="0" Margin="15,10,10,10" Padding="3" FontStyle="Italic" Foreground="Gray"
                   Text="" IsHitTestVisible="False" />


        <!-- Search results -->
        <ItemsControl Grid.Column="2" Grid.Row="1" Margin="10" ItemsSource="{Binding Path=CertificatesCollectionView}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" Grid.Column="0" BorderThickness="0"
                                 Text="{Binding Subject}"
                                 Foreground="{Binding Subject, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"
                                 FontSize="16" Margin="0,0,10,0" />
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="Validtity:" Foreground="Gray"
                                     BorderThickness="0" />
                            <TextBox Grid.Column="1" BorderBrush="Transparent" Margin="0,0,10,0" BorderThickness="0">
                                <TextBox.Text>
                                    <MultiBinding StringFormat="{}{0} - {1}">
                                        <Binding Path="NotBefore" />
                                        <Binding Path="NotAfter" />
                                    </MultiBinding>
                                </TextBox.Text>
                            </TextBox>
                            <TextBox Grid.Column="2" Text="Keylength:" Foreground="Gray"
                                     BorderThickness="0" />
                            <TextBox Grid.Column="3" BorderBrush="Transparent" Margin="0,0,10,0" Padding="0"
                                     BorderThickness="0">
                                <TextBox.Text>
                                    <MultiBinding StringFormat="{}{0} Bit">
                                        <Binding Path="PublicKeyLength" />
                                    </MultiBinding>
                                </TextBox.Text>
                            </TextBox>
                            <TextBox Grid.Column="4" Text="Thumbprint:" Foreground="Gray"
                                     BorderThickness="0" />
                            <TextBox Grid.Column="5" Text="{Binding Thumbprint}"
                                     Foreground="{Binding Thumbprint, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}"
                                     Margin="0,0,10,0" BorderThickness="0" MinWidth="280"/>




                            <TextBox Grid.Column="6" Text="SN:" ToolTip="SerialNumber" Foreground="Gray"
                                     BorderBrush="Transparent" BorderThickness="0" />
                            <TextBox Grid.Column="7" Text="{Binding SerialNumber}"
                                     BorderBrush="Transparent"
                                     Margin="0,0,10,0" BorderThickness="0"

                                     Foreground="{Binding SerialNumber, Converter={StaticResource HighlightConverter}, ConverterParameter={x:Reference SearchBar}}" />
                            
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="1" Text="{Binding TrustCenterName}" Foreground="Gray"
                                     Margin="0,0,5,0"
                                     BorderBrush="Transparent" FontSize="12" HorizontalAlignment="Right"
                                     BorderThickness="0" />
                            <Button Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,0" Width="17"
                                    Height="17"
                                    BorderBrush="Transparent" ToolTip="Copy to Clipboard" BorderThickness="0">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/Images/copy.png" />
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <ScrollViewer CanContentScroll="True"
                                  Focusable="False">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

        </ItemsControl>
        <!-- </Border> -->
        <!-- Search results -->


        <!-- LoadingAnimation -->

        <Grid Grid.Column="2" Grid.Row="1">
            <Control Margin="0,0,40,20" Background="Transparent" Width="50" Height="50" HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Visibility="{Binding UserInputIsEnabled, Converter={StaticResource VisibilityConverter}}"
                     Style="{StaticResource BusyAnimationStyle}" />
        </Grid>

        <!-- LoadingAnimation -->


        <!-- CollapseButton -->

        <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Margin="0,10,0,10">
            <Button Command="{Binding CollapseSideBarCommand}"
                    Style="{StaticResource CollapseSideBarButtonStyleTrigger}" />
        </Grid>

        <!-- CollapseButton -->


        <!-- Menu -->

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="0,10,10,10" Background="#f7f8fa" Name="Sidebar"
              Visibility="Visible" Width="{Binding MenuWidth, UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- AddTrustCenter -->
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="39*" />
                    <ColumnDefinition Width="19*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <WrapPanel>
                        <Label Style="{StaticResource MenuTitleLabelStyle}" />
                        <Button Style="{StaticResource CloseMenuButtonStyle}"
                                Command="{Binding CollapseSideBarCommand}" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <Label Style="{StaticResource MenuAddTrustCenterNameLabelStyle}" />
                        <TextBox Padding="3" Width="200" Height="auto"
                                 Text="{Binding AddTrustCenterName, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding UserInputIsEnabled}">
                        </TextBox>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <Label Style="{StaticResource MenuAddTrustCenterUrlLabelStyle}" />
                        <TextBox Padding="3" Width="200" Height="auto"
                                 Text="{Binding AddTrustCenterUrl, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding UserInputIsEnabled}" />
                    </WrapPanel>
                    <Button Style="{StaticResource AddButtonStyle}" Command="{Binding AddTrustCenterButtonCommand}"
                            IsEnabled="{Binding UserInputIsEnabled}" />
                </StackPanel>
            </Grid>
            <!-- AddTrustCenter -->

            <!-- TrustCenterHistory -->
            <Grid Grid.Column="1" Grid.Row="1">
                <Label Style="{StaticResource TrustCenterHistoryTitleLabelStyle}" />
            </Grid>

            <!-- TrustCenter Active Filter -->
            <Grid Grid.Column="1" Grid.Row="2">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- TrustCenter Active Filter -->
                        <Grid Grid.Row="0">
                            <StackPanel Margin="4,0,17,4">
                                <ItemsControl ItemsSource="{Binding Path=TrustCenterHistoryActive}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:TrustCenterMetaInfo}">
                                            <Border HorizontalAlignment="Left" Padding="2" Width="245" Height="32"
                                                    Margin="4,2,0,2" BorderBrush="Transparent" BorderThickness="0.8"
                                                    CornerRadius="3" Background="#d9e9ff">
                                                <WrapPanel Margin="2" Background="Transparent">
                                                    <Button Style="{DynamicResource RemoveIconStyle}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=RemoveTrustCenterFromFilterCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/remove.png"
                                                                        Stretch="Uniform" />
                                                        </Button.Background>
                                                    </Button>
                                                    <TextBlock Width="150" VerticalAlignment="Center"
                                                               Text="{Binding Name}" />
                                                    <Button Style="{DynamicResource InfoButtonStyle}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=InfoAboutTrustCenterCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/infoIcon.png"
                                                                        Stretch="Uniform" />
                                                        </Button.Background>
                                                    </Button>
                                                    <Button Style="{DynamicResource LoadButtonStyle}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=ReloadCertificatesOfTrustCenterCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/loadIcon.png" />
                                                        </Button.Background>
                                                    </Button>
                                                    <Button Style="{DynamicResource BinImageStyle}" 
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=DeleteTrustCenterFromHistoryCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/binBlack.png"
                                                                        Stretch="Uniform" />
                                                        </Button.Background>
                                                    </Button>
                                                </WrapPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                        <!-- TrustCenter Active Filter -->

                        <!-- TrustCenter Inactive Filter -->
                        <Grid Grid.Row="1">
                            <StackPanel Margin="4,0,17,0">
                                <ItemsControl ItemsSource="{Binding Path=TrustCenterHistoryInactive}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource InactiveFilterBorder}">
                                                <WrapPanel Margin="2" Background="Transparent">
                                                    <Button Style="{DynamicResource AddIconStyle}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=AddTrustCenterToFilterCommand}">
                                                        <Button.Background>
                                                        <ImageBrush ImageSource="/Resources/Images/add.png"
                                                                        Stretch="Uniform" />
                                                        </Button.Background>
                                                    </Button>
                                                    <TextBlock Width="150" VerticalAlignment="Center"
                                                               Text="{Binding Name}" />
                                                    <Button Style="{DynamicResource InfoButtonStyle}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=InfoAboutTrustCenterCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/infoIcon.png"
                                                                        Stretch="Uniform" />
                                                        </Button.Background>
                                                    </Button>
                                                    <Button Style="{DynamicResource LoadButtonStyle}"
                                                            CommandParameter="{Binding}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=ReloadCertificatesOfTrustCenterCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/loadIcon.png" />
                                                        </Button.Background>
                                                    </Button>
                                                    <Button Style="{DynamicResource BinImageStyle}"
                                                            Command="{Binding Source={StaticResource ViewModel}, Path=DeleteTrustCenterFromHistoryCommand}">
                                                        <Button.Background>
                                                            <ImageBrush ImageSource="/Resources/Images/binBlack.png"
                                                                        Stretch="Uniform" />
                                                        </Button.Background>
                                                    </Button>
                                                </WrapPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
            <!-- TrustCenter Inactive Filter -->

            <!-- TrustCenterHistory -->

        </Grid>
        <!-- Menu -->

    </Grid>
</Window>