<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TrustCenterSearch.Presentation.Resources.Styles">

    <!--Add TrustCenter-->
    <Style TargetType="Label" x:Key="MenuTitleLabelStyle">
        <Setter Property="Content" Value="Trust Center Search GUI"/>
        <Setter Property="Foreground" Value="#2772db"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="10,5,0,10"/>
    </Style>

    <Style TargetType="Label" x:Key="MenuAddTrustCenterNameLabelStyle">
        <Setter Property="Width" Value="45"/>
        <Setter Property="Content" Value="Name"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <Style TargetType="Label" x:Key="MenuAddTrustCenterUrlLabelStyle">
        <Setter Property="Width" Value="45"/>
        <Setter Property="Content" Value="Url"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>
    <!--Add TrustCenter-->

    <!-- TrustCenterHistory -->
    <Style TargetType="Label" x:Key="TrustCenterHistoryTitleLabelStyle">
        <Setter Property="Content" Value="Trust Center"/>
        <Setter Property="Foreground" Value="#2772db"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>
    <!-- TrustCenterHistory -->

</ResourceDictionary>